<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Home"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <custom.RobotoTextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="15dp"
                    android:textSize="40dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="0 deg."
                    android:id="@+id/temp_current" />

                <custom.RobotoTextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="your Location"
                    android:id="@+id/location" />

                <custom.RobotoTextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="20dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="status"
                    android:id="@+id/status_current" />

            </LinearLayout>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:id="@+id/status_img_current"
                android:src="@drawable/weather"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/status_img_today"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weather"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <custom.RobotoTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="Today" />

            <custom.RobotoTextView
                android:id="@+id/status_today"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:textStyle="italic"
                android:textSize="17dp"
                android:textColor="#000"
                android:text="Today" />

        </LinearLayout>

        <custom.RobotoTextView
            android:id="@+id/temp_today"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="92dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="40/20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/status_img_tomorrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weather"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <custom.RobotoTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="Tomorrow" />

            <custom.RobotoTextView
                android:id="@+id/status_tomorrow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:textStyle="italic"
                android:textSize="17dp"
                android:textColor="#000"
                android:text="Tomorrow" />

        </LinearLayout>

        <custom.RobotoTextView
            android:id="@+id/temp_tomorrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="62dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="40/20" />

    </LinearLayout>

</LinearLayout>
